<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.tain.mybatis.mappers.UsrMapper">

	<!-- selectAll -->
	<select id="selectAll" resultType="Usr">
		select
			id
			, user_id
			, pass_wd
			, desc
		from
			tb_usr
		where 1=1
	<if test='id != null and id != ""'>
			and id = #{id}
	</if>
	</select>
	
	<!-- selectOne -->
	<select id="selectOne" resultType="Usr">
		select
			id
			, user_id
			, '*****' as pass_wd
			, desc
		from
			tb_usr
		where 1=1
			and id = #{id}
	</select>
	
</mapper>
